<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AddBookController">
   <children>
      <VBox prefHeight="250.0" prefWidth="450.0">
         <children>
            <TextField fx:id="BookIdLabel" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="430.0" promptText="Book ID" style="-fx-background-color: #cfe7ea;">
               <font>
                  <Font name="Times New Roman Italic" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="BookTitleLabel" prefHeight="40.0" promptText="Book Title" style="-fx-background-color: #cfe7ea;">
               <font>
                  <Font name="Times New Roman Italic" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="AuthorLabel" prefHeight="40.0" promptText="Author" style="-fx-background-color: #cfe7ea;">
               <font>
                  <Font name="Times New Roman Italic" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="PublisherLabel" prefHeight="40.0" promptText="Publisher" style="-fx-background-color: #cfe7ea;">
               <font>
                  <Font name="Times New Roman Italic" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <HBox layoutY="250.0" prefHeight="50.0" prefWidth="450.0">
         <children>
            <Button fx:id="SaveButton" mnemonicParsing="false" onAction="#SaveAction" prefHeight="50.0" prefWidth="225.0" style="-fx-background-color: #51a7bf;" text="Save" textFill="#daf4ff">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Button fx:id="CancelButton" mnemonicParsing="false" onAction="#CancelAction" prefHeight="50.0" prefWidth="225.0" style="-fx-background-color: #51a7bf;" text="Cancel" textFill="#daf4ff">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
