<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.BorrowBook">

    <top>
        <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
            <Label text="Student Registration Form"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;"
                   alignment="CENTER" />
            <HBox spacing="10" alignment="CENTER">
                <Label text="Name or author of the book" style="-fx-font-size: 14px;" />
                <TextField fx:id="searchField" promptText="Enter keyword..." style="-fx-pref-width: 300;" />
                <Button text="Search Book" onAction="#handleSearch" />
            </HBox>
        </VBox>
    </top>


    <center>
        <ListView fx:id="bookListView" style="-fx-background-color: #fff; -fx-padding: 10;" />
    </center>


    <BorderPane.margin>
        <Insets top="20" right="20" bottom="20" left="20" />
    </BorderPane.margin>
</BorderPane>
